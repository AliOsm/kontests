<div class="modal fade" id="suggestSite" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content primary-dynamic-bg">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">We love your suggestions!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for(@suggest) do |f| %>
				  <%= f.input :site, required: true, autofocus: true, placeholder: 'http://site.com', input_html: { maxlength: 255 } %>
          <%= f.input :email, placeholder: 'someone@somewhere.com', input_html: { maxlength: 255, type: :email } %>
          <%= f.input :message, placeholder: 'Tell us what we don\'t know!', input_html: { maxlength: 5000 } %>
				<% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="submit_suggest" type="button" class="btn btn-primary" onClick="$('#new_suggest').submit(); return true;">Submit</button>
      </div>
    </div>
  </div>
</div>
