<div class="modal fade" id="joinTeam" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content primary-dynamic-bg">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Hurry up, we need your skills!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for(@join) do |f| %>
          <%= f.input :name, required: true, autofocus: true, placeholder: 'Your name', input_html: { maxlength: 255 } %>
          <%= f.input :email, placeholder: 'someone@somewhere.com', input_html: { maxlength: 255, type: :email } %>
          <%= f.input :how, label: 'How you can help?', placeholder: 'Tell us how you can help', input_html: { maxlength: 5000 } %>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="submit_join" type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
