              <div class="sec-title">
                <h2>Who are we?</h2>
                <h3>Humans <%= emojify(':stuck_out_tongue:') %></h3>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card-body">
        <div class="container">
          <div class="row justify-content-center mb-3">
            <div class="col-12 col-md-4">
              <div class="our-team">
                <div class="pic">
                  <%= image_tag('team/ali_fadel.jpg', class: 'card-img img-fluid') %>
                </div>
                <div class="team-content">
                  <h3>Ali H. Fadel</h3>
                  <span class="post"></span>
                </div>
                <ul class="social">
                  <li><%= link_to(icon('fab', 'facebook fa-2x'), 'https://fb.com/aliosm97', target: :_blank) %></li>
                  <li><%= link_to(icon('fab', 'github-square fa-2x'), 'https://github.com/AliOsm', target: :_blank) %></li>
                  <li><%= mail_to('aliosm1997@gmail.com', icon('fas', 'envelope-square fa-2x')) %></li>
                </ul>
              </div>
            </div>

            <div class="col-12 col-md-4">
              <div class="our-team">
                <div class="pic">
                  <%= image_tag('team/ibraheem_tuffaha.jpeg', class: 'card-img img-fluid') %>
                </div>
                <div class="team-content">
                  <h3>Ibraheem Z. Tuffaha</h3>
                  <span class="post"></span>
                </div>
                <ul class="social">
                  <li><%= link_to(icon('fab', 'facebook fa-2x'), 'https://fb.com/ibrahim.tuffaha.7', target: :_blank) %></li>
                  <li><%= link_to(icon('fab', 'github-square fa-2x'), 'https://github.com/IbraheemTuffaha', target: :_blank) %></li>
                  <li><%= mail_to('bro.t.1996@gmail.com', icon('fas', 'envelope-square fa-2x')) %></li>
                </ul>
              </div>
            </div>
          </div>

          <div class="row justify-content-center">
            <div class="col-12 col-md-4 mb-4">
              <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#joinTeam">
                Join KONTESTS team now!
              </button>
            </div>

            <div class="col-12 col-md-4">
              <a class="btn btn-primary btn-block" href="https://github.com/AliOsm/kontests" target="_blank">Contribute on GitHub</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
